---
import { Image } from "@astrojs/image/components";
import ProfilePicture from "../assets/Profile_Picture.jpg";
---

<div class="wrapper w-72 md:w-full">
  <div class="image">
    <Image src={ProfilePicture} alt="Headshot of Ernesto Resende" />
  </div>
</div>
<style>
  .wrapper {
    display: block;
    position: relative;
    /* width: 100%; */
    background-color: var(--color-turquoise);
    border-radius: 6px;
  }
  .wrapper::after {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 10px;
    left: 10px;
    border-radius: 4px;
    border: 1.5px solid var(--color-turquoise);
    z-index: -1;
    transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
  }
  .wrapper img {
    border-radius: 6px;
    filter: grayscale(80%);
    mix-blend-mode: multiply;
    transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
  }
  .wrapper:hover img {
    filter: none;
    mix-blend-mode: normal;
  }
  .wrapper:hover::after {
    transform: translate(-5px, -5px);
  }
</style>
