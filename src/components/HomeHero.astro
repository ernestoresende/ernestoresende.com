---
import { BackgroundRipple } from '../assets/BackgroundRipple'; 
---

<section class="px-8 h-screen-5/6 flex justify-center items-center">
  <div class="max-w-2xl w-full">
    <div class="flex">
      <div class="z-10">
        <h1 class="font-display font-extrabold text-7xl pb-6">
          Hi, I'm{' '}
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-eletric-pink to-deep-lilac"
          >
            Ernesto
          </span>
        </h1>
        <p class="text-xl text-lavander-gray font-normal leading-9">
          Software engineer especialized in building (and ocasionally designing)
          digital products. Highly focused on the JavaScript ecosystem and
          serverless environments.
        </p>
      </div>
      <div class="absolute top-0 right-0 w-7/12 max-w-2xl z-0">
        <BackgroundRipple />
      </div>
    </div>
  </div>
</section>
